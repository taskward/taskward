{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "main",
  "compilerOptions": {
    "builder": "swc",
    "deleteOutDir": true,
    "manualRestart": true,
    "tsConfigPath": "tsconfig.build.json",
    "typeCheck": true,
    "assets": [
      "**/*.css",
      {
        "include": "**/*.html",
        "watchAssets": true
      },
      {
        "include": "i18n/**/*",
        "watchAssets": true
      }
    ],
    "watchAssets": false
  },
  "generateOptions": {
    "flat": false,
    "spec": false
  }
}
