{
  "name": "server",
  "description": "âœ… Taskward API server.",
  "author": "Bruce Song <recall4056@gmail.com> (https://github.com/recallwei/)",
  "homepage": "https://github.com/taskward/taskward#readme",
  "bugs": "https://github.com/taskward/taskward/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/taskward/taskward.git",
    "directory": "apps/server"
  },
  "scripts": {
    "dev": "pnpm set:env -- nest start --watch",
    "start": "pnpm set:env -- nest start",
    "debug": "pnpm set:env -- nest start --debug --watch",
    "build": "pnpm set:env -- nest build",
    "build:webpack": "pnpm set:env -- nest build --webpack",
    "prod": "node dist/main",
    "nest": "nest",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "set:env": "dotenv -e ../../.env.local -e ../../.env",
    "prisma": "pnpm set:env -- prisma",
    "prisma:generate": "pnpm set:env -- prisma generate",
    "prisma:generate:watch": "pnpm set:env -- prisma generate --watch",
    "prisma:migrate:dev": "pnpm set:env -- prisma migrate dev --skip-seed",
    "prisma:migrate:deploy": "pnpm set:env -- prisma migrate deploy",
    "prisma:seed": "pnpm set:env -- prisma db seed",
    "prisma:reset": "prisma migrate reset",
    "prisma:studio": "pnpm set:env -- prisma studio",
    "prisma:validate": "prisma validate",
    "prisma:format": "prisma format",
    "type:check": "tsc --pretty --noEmit",
    "cspell:check": "cspell --no-progress --show-suggestions --show-context --cache **",
    "eslint:check": "eslint . --color --cache",
    "eslint:fix": "eslint . --color --cache --fix",
    "prettier:check": "prettier --check --cache --ignore-unknown --ignore-path=../../.prettierignore .",
    "prettier:fix": "prettier --write --cache --ignore-unknown --ignore-path=../../.prettierignore ."
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.2",
    "@nestjs/common": "^10.3.9",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.3.9",
    "@nestjs/platform-express": "^10.3.9",
    "@nestjs/swagger": "^7.3.1",
    "@nestjs/terminus": "^10.2.3",
    "@nestjs/throttler": "^5.2.0",
    "@node-rs/bcrypt": "^1.10.4",
    "@prisma/client": "5.15.0",
    "@taskward/config": "workspace:^",
    "@taskward/prisma": "workspace:^",
    "axios": "^1.7.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "compression": "^1.7.4",
    "dayjs": "^1.11.11",
    "helmet": "^7.1.0",
    "picocolors": "^1.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.9",
    "@swc/cli": "^0.3.12",
    "@swc/core": "^1.5.29",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.2",
    "@types/supertest": "^6.0.2",
    "dotenv-cli": "^7.4.2",
    "jest": "^29.7.0",
    "prisma": "^5.15.0",
    "prisma-dbml-generator": "^0.12.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.4",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "prisma": {
    "schema": "prisma/schema",
    "seed": "ts-node prisma/seed/index.ts"
  },
  "private": true,
  "license": "MIT"
}
