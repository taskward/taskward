{
  "name": "taskward",
  "description": "âœ… A minimalist Todo&Tasks web application.",
  "author": "Bruce Song <recall4056@gmail.com> (https://github.com/recallwei/)",
  "version": "0.0.0",
  "scripts": {
    "admin:dev": "pnpm -F @taskward/admin dev",
    "client:dev": "pnpm -F @taskward/client dev",
    "mobile:dev:web": "pnpm -F @taskward/mobile web",
    "server:dev": "pnpm -F @taskward/server dev",
    "docker:dev": "docker compose up -d",
    "build:packages": "pnpm nx run-many -t build -p @taskward/*",
    "lint:check": "pnpm nx run-many -t type:check cspell:check eslint:check prettier:check --all --parallel=10",
    "type:check": "pnpm nx run-many -t type:check --all",
    "cspell:check": "pnpm nx run-many -t cspell:check --all",
    "eslint:check": "pnpm nx run-many -t eslint:check --all",
    "eslint:fix": "pnpm nx run-many -t eslint:fix --all",
    "prettier:check": "pnpm nx run-many -t prettier:check --all",
    "prettier:fix": "pnpm nx run-many -t prettier:fix --all",
    "bo:cspell": "pnpm bo cspell",
    "bo:bump": "pnpm up -r '@bit-ocean/*' --latest",
    "cz": "git-cz",
    "prepare": "husky"
  },
  "dependencies": {
    "@nx/next": "^19.1.2"
  },
  "devDependencies": {
    "@bit-ocean/cli": "^0.0.25",
    "@bit-ocean/commitlint-config": "^0.0.25",
    "@bit-ocean/cspell": "^0.0.25",
    "@bit-ocean/eslint-config": "^0.0.25",
    "@bit-ocean/prettier-config": "^0.0.25",
    "@bit-ocean/renovate-config": "^0.0.25",
    "@bit-ocean/tsconfig": "^0.0.25",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@nx/workspace": "19.1.2",
    "@taskward/cspell": "workspace:^",
    "commitizen": "^4.3.0",
    "cspell": "^8.8.4",
    "cz-git": "^1.9.2",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "nx": "19.1.2",
    "prettier": "^3.3.1",
    "tsup": "^8.1.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "engines": {
    "node": ">=20"
  },
  "private": true,
  "license": "MIT"
}
